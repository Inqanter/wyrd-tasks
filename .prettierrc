{
  "singleQuote": false,
  "printWidth": 80,
  "trailingComma": "none",
  "bracketSpacing": true,
  "tabWidth": 2,
  "endOfLine": "lf",
  "bracketSameLine": true,
  "arrowParens": "always",
  "htmlWhitespaceSensitivity": "css",
  "overrides": [
    {
      "files": ["**/*.css", "**/*.less", "**/*.scss", "**/*.sass"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["**/*.html"],
      "options": {
        "parser": "html",
        "printWidth": 120,
        "singleQuote": false,
        "bracketSameLine": true
      }
    }
  ]
}
